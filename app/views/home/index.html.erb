<h1 class='page-header'>Leaderboard</h1>

<!--div class="alert alert-warning" role="alert">This is a sample page.</div-->

<div class="table-responsive">
<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <!--th>User</th-->
      <th>Rank</th>
      <th>Name</th>
      <th>Score</th>
      <th>Game Played</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="text-center">
    <% rank = 0 %>
    <% @players.each do |player| %>
    <tr>
      <td><%= rank +=1 %></td>
      <td><%= player.name %></td>
      <td><%= Getscore(player.id) %></td>
      <td><%= Gamesplayed(player.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
