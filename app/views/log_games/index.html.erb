<h1 class='page-header'>History</h1>

<div class="table-responsive">
<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <!--th>User</th-->
      <th>Date</th>
      <th>Opponent</th>
      <th>Score</th>
      <th>Result</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="text-center">
    <% @log_games.each do |log_game| %>
      <tr>
        <!--td><%= log_game.user.email %></td-->
        <td><%= log_game.dateplayed.strftime("%B %Y") %></td>
        <td><%=  opponent_name(log_game.opponent) %></td>
        <td><%= log_game.yourscore %> - <%= log_game.theirscore %></td>
        <td>
          <!--%= log_game.yourscore %-->
          <% if(log_game.yourscore > log_game.theirscore)%>
            W
          <%else%>
            L
          <%end%>
        </td>
        <!--td><%= log_game.theirscore %></td>
        <td><%= link_to 'Show', log_game %></td>
        <td><%= link_to 'Edit', edit_log_game_path(log_game) %></td>
        <td><%= link_to 'Destroy', log_game, method: :delete, data: { confirm: 'Are you sure?' } %></td-->
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

